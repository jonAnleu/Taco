@rendermode InteractiveServer

<MudCarousel Class="rounded z-10 text-white"
             ItemsSource="@_carouselCards"
             SelectedIndex="_selectedIndex"
             Style="height: 60vh; width: 100%;"
             ShowArrows="true"
             ShowBullets="true"
             EnableSwipeGesture="true"
             AutoCycle="true">

    <ItemTemplate>
        <MudImage Src="@context.Image"
                  ObjectFit="ObjectFit.Contain"
                  Style="width: 100%; height: 100%; min-width: 100%; min-height: 100%;"
                  Alt="Carousel image"/>
    </ItemTemplate>
</MudCarousel>

@code {
    private int _selectedIndex = 0;

    private readonly IReadOnlyList<CarouselCardModel> _carouselCards =
    [
        new() { Image = "images/food-shot-outside.jpg" },
        new() { Image = "images/horchata-cinnamon.jpg" },
        new() { Image = "images/logo-nb-sunny-rios.jpg" }
    ];

    public class CarouselCardModel
    {
        public required string Image { get; init; } // C# 11+
    }

}


        <MudImage Src="images/logo.jpeg" Height="108" Width="240"/>
        <MudStack Row="true">
            <NavDropdownLink Label="LOCATIONS"/>
            <NavDropdownLink Label="MENU"/>
            <NavDropdownLink Label="ABOUT"/>
            <NavDropdownLink Label="CATERING"/>
            <NavDropdownLink Label="ORDER ONLINE"/>
        </MudStack>
    </MudStack>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

